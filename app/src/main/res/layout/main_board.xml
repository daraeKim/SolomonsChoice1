<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/selectmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="#FFF612">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="솔로몬의 글투표 "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/first"
            android:background="#FFF612"
            android:textColor="#000000"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="솔로몬의 토론 "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/second"
            android:background="#FFF612"
            android:textColor="#000000"/>

    </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="#EAEAEA"
            android:id="@+id/title">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/selectTitle"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#EAEAEA"
                    android:text="솔로몬의 사진투표 "
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:id="@+id/solmon"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/arrow_down_float"
                    android:layout_toRightOf="@+id/solmon"
                    android:id="@+id/icon"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_menu_search"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="#ff555f"
            android:orientation="vertical"
            android:id="@+id/content"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ScrollView>
        </LinearLayout>
</LinearLayout>
